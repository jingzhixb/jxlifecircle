<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.activity.AddAddressActivity">
<include layout="@layout/title_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:text="收货人"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/title_666"
            android:layout_marginLeft="22dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:background="@null"
            android:maxLength="10"
            android:layout_marginLeft="20dp"
            android:id="@+id/ed_shouhuo_name"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="22dp"
        android:background="@color/view_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:text="联系方式"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/title_666"
            android:layout_marginLeft="22dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_marginLeft="20dp"
            android:maxLength="11"
            android:id="@+id/ed_lianxi_type"
            android:inputType="number"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="22dp"
        android:background="@color/view_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:text="所在地区"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/title_666"
            android:layout_marginLeft="22dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:background="@null"
            android:maxLength="30"
            android:layout_marginLeft="20dp"
            android:id="@+id/ed_area"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="22dp"
        android:background="@color/view_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:text="街道"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/title_666"
            android:layout_marginLeft="22dp"
          android:layout_marginTop="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:background="@null"
            android:maxLength="50"
            android:layout_marginLeft="20dp"
            android:id="@+id/ed_address"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@drawable/next"
        android:layout_marginLeft="22dp"
        android:id="@+id/queren"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:text="确认"
        android:layout_marginTop="30dp"
        android:layout_marginRight="22dp"
        android:layout_height="45dp" />
</LinearLayout>
