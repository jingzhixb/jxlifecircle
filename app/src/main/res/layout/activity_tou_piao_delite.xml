<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/f5f5f5"
    android:layout_height="match_parent"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.homeacyivity.TouPiaoDeliteActivity">
<include layout="@layout/title_layout"
    android:id="@+id/rl"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/rl"
        android:layout_above="@id/l"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/jxcolor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="355"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/title_666"
                android:text="报名人数"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/jxcolor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="355"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_12"
                android:text="累计票数"
                android:textColor="@color/title_666"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/jxcolor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="355"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/title_666"
                android:layout_marginTop="10dp"
                android:text="累计访问人数"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_height="40dp">
        <TextView
            android:layout_width="50dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="22dp"
            android:gravity="center"
            android:id="@+id/number"
            android:text="50号"
            android:background="@drawable/number_bg"
            android:layout_centerVertical="true"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/title_666"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/number"
            android:layout_marginLeft="12dp"
            android:singleLine="true"
            android:id="@+id/address"
            android:layout_marginRight="22dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_img"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:layout_height="140dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@drawable/toupiao_stoken"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="333票"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/orange"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:layout_alignParentLeft="true"
                            android:background="@color/view_color"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="333票"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/orange"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/view_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/title_999"
                        android:textSize="@dimen/sp_14"
                        android:text="         姓名"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/title_666"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/title_999"
                        android:textSize="@dimen/sp_14"
                        android:text="         性别"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/title_666"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/title_999"
                        android:textSize="@dimen/sp_14"
                        android:text="参赛寄语"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/title_666"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:id="@+id/l"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/jxcolor"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="送礼物"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:background="@color/jxcolor"
            android:text="投他一票"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
