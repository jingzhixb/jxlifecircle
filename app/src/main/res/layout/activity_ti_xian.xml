<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.activity.TiXianActivity">
<include layout="@layout/title_layout"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:id="@+id/rl_zhanghao">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/title_666"
            android:text="提现账号"
            android:layout_marginLeft="22dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:background="@mipmap/youjiant"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:id="@+id/x"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/type"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/x"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_14"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/title_666"
            android:text="提现金额"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="22dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="￥"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:id="@+id/xx"
                android:layout_marginLeft="22dp"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=""
                android:digits="0123456789."
                android:gravity="top"
                android:id="@+id/ed_money"
                android:textColor="@color/title_333"
                android:textSize="30sp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/xx"
                android:background="@null"/>
<View
    android:layout_width="match_parent"
    android:background="@color/view_color"
    android:layout_marginLeft="22dp"
    android:layout_marginRight="22dp"
    android:layout_alignParentBottom="true"
    android:layout_height="1dp"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/title_666"
            android:text="可提现金额: "
            android:id="@+id/xxx"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_12"
            android:text="55555"
            android:layout_toRightOf="@id/xxx"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:text="全部提现"
            android:id="@+id/tv_alltixian"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="45dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:textSize="@dimen/sp_17"
        android:text="完成"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/next_red"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
