<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    android:orientation="vertical"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.activity.ChongZhiActivity">
<include layout="@layout/title_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:text="当前账户余额"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:id="@+id/now_money"
            android:text=""
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:text="充值金额"
            android:layout_marginTop="10dp"
            android:id="@+id/x"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_15" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/x"
            android:layout_marginLeft="22dp"
            android:id="@+id/xx"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/title_666"
            android:text="￥"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_below="@id/x"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/xx"
            android:background="@null"
            android:id="@+id/ed_money"
            android:layout_alignTop="@id/xx"
            android:layout_height="40dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/ed_money"
            android:background="@color/view_color"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:id="@+id/queren"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:text="确认"
        android:background="@drawable/next_red"/>
</LinearLayout>
