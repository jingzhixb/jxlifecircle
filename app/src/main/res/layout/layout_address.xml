<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/white"
        android:visibility="gone"
        android:id="@+id/rl_select_address"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/jxcolor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/sp_16"
            android:text="选择收货地址"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="15dp"
            android:background="@mipmap/cha2"
            android:layout_alignParentRight="true"
            android:id="@+id/cha2"
            android:layout_marginTop="@dimen/sp_16"
            android:layout_marginRight="22dp"
            android:layout_height="15dp" />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_below="@id/cha2"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:layout_marginRight="100dp"
        android:id="@+id/ll_add_address"
        android:layout_centerInParent="true"
        android:background="@drawable/address">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/jxcolor"
                android:textSize="@dimen/sp_14"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="填写收货地址免费领"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:layout_marginTop="14dp"
                android:background="@mipmap/cha2"
                android:layout_height="10dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/title_666"
                android:text="姓名"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:textColor="@color/title_333"
                android:textSize="@dimen/sp_12"
                android:textColorHint="@color/title_999"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:hint="请输入您的姓名"
                android:layout_marginRight="15dp"
                android:background="@drawable/ed_stoken"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/title_666"
                android:text="电话"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:textColor="@color/title_333"
                android:inputType="number"
                android:textSize="@dimen/sp_12"
                android:textColorHint="@color/title_999"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:hint="请输入您的电话"
                android:layout_marginRight="15dp"
                android:background="@drawable/ed_stoken"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/title_666"
                android:text="地区"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:textColor="@color/title_333"
                android:textSize="@dimen/sp_12"
                android:textColorHint="@color/title_999"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:hint="请输入您的所在地区"
                android:layout_marginRight="15dp"
                android:background="@drawable/ed_stoken"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/title_666"
                android:text="地址"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:textColor="@color/title_333"
                android:textSize="@dimen/sp_12"
                android:textColorHint="@color/title_999"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:hint="请输入您的详细地址"
                android:layout_marginRight="15dp"
                android:background="@drawable/ed_stoken"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:text="保存"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/next"/>
    </LinearLayout>
</RelativeLayout>
