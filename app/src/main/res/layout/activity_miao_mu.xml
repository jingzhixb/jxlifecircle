<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/f5f5f5"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.fabuactivity.ErShouFangActivirt">
    <include layout="@layout/title_layout"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/title_666"
                    android:text="发布类型"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="22dp"
                    android:id="@+id/sp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:hint="请输入您发布的内容"
                android:gravity="top"
                android:paddingTop="5dp"
                android:paddingLeft="22dp"
                android:textSize="@dimen/sp_14"
                android:textColorHint="@color/title_999"
                android:background="@color/white"/>


            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/title_666"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="15dp"
                android:text="图片"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:text="确认发布"
                    android:background="@color/jxcolor"/>
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>
