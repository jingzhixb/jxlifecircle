<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/f5f5f5"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.activity.ShopCoreActivity">
<include layout="@layout/title_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/ll_info"
        android:background="@color/jxcolor"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="65dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/im_title"
            android:layout_marginTop="22dp"
            android:layout_height="65dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_height="65dp">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:text="店铺名称"
                android:id="@+id/tv_name"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@mipmap/bai"
                android:layout_marginRight="22dp"
                android:layout_height="11dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/sp_13"
                android:id="@+id/tv_type"

                android:textColor="@color/white"
                android:text="食品类"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_type"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:text="电话"
                android:id="@+id/tv_mobile"
                android:layout_marginTop="5dp"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="22dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="22dp"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:id="@+id/rl_dingdan"
            android:background="@color/white"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/title_666"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:text="商家订单"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/dingdan"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/rl_guanli"
            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/title_666"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:text="商品管理"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/shangpin2"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="22dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="22dp"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:id="@+id/rl_youhui"
            android:background="@color/white"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/title_666"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:text="优惠卷"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/youhuiquan2"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent">

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
