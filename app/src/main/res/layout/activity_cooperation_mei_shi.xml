<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/f5f5f5"
    android:layout_height="match_parent"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.activity.CooperationMeiShiActivity">

    <include layout="@layout/title_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/sp_15"
                    android:text="店铺名称"
                    android:id="@+id/tv_mingcheng"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:hint="请输入店铺名称"
                    android:id="@+id/ed_mingcheng"
                    android:textColorHint="@color/title_999"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view_color"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_zhaopai"
                android:layout_height="75dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/sp_15"
                    android:text="店铺招牌"
                    android:id="@+id/tv_zhaopai"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:hint="请输入店铺名称"
                    android:id="@+id/im_zhaopai"
                    android:textColorHint="@color/title_999"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="50dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view_color"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_address"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/sp_15"
                    android:text="店铺地址"
                    android:id="@+id/x"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/sp_15"
                    android:layout_toRightOf="@id/x"
                    android:layout_marginRight="25dp"
                    android:singleLine="true"
                    android:id="@+id/tv_address"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@mipmap/youjiant"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:textColorHint="@color/title_999"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view_color"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rl_shangjia"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/sp_15"
                    android:text="请选择商家分类"
                    android:id="@+id/xx"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/sp_15"
                    android:layout_toRightOf="@id/xx"
                    android:layout_marginRight="25dp"
                    android:singleLine="true"
                    android:id="@+id/tv_type"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@mipmap/youjiant"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:textColorHint="@color/title_999"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view_color"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/sp_15"
                    android:text="法人"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:hint="请输入法人姓名"
                    android:id="@+id/ed_faren"
                    android:textColorHint="@color/title_999"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view_color"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/sp_15"
                    android:text="联系电话"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="wrap_content"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:hint="请输入电话号码"
                    android:id="@+id/ed_mobile"
                    android:inputType="number"
                    android:textColorHint="@color/title_999"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view_color"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="22dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="22dp"
                android:layout_height="100dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/rl_zheng"
                    android:orientation="vertical"
                    android:background="@drawable/zheng_stoken"
                    android:layout_marginRight="7dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image_zheng"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:scaleType="centerCrop"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_width="40dp"
                        android:background="@mipmap/jia"
                        android:id="@+id/im_zheng"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="40dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/title_666"
                        android:textSize="@dimen/sp_13"
                        android:id="@+id/tv_zheng"
                        android:layout_below="@id/im_zheng"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="上传身份证正面"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:id="@+id/rl_fan"
                    android:background="@drawable/zheng_stoken"
                    android:layout_marginLeft="7dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image_fan"
                        android:visibility="gone"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:id="@+id/im_fan"
                        android:background="@mipmap/jia"
                        android:layout_height="40dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/title_666"
                        android:textSize="@dimen/sp_13"
                        android:id="@+id/tv_fan"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/im_fan"
                        android:layout_marginTop="10dp"
                        android:text="上传身份证正面"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/title_666"
                android:text="营业执照"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:id="@+id/rl_zhizhao"
                android:layout_marginTop="20dp"
                android:layout_height="155dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/image_zhizhao"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="40dp"
                    android:background="@mipmap/jia"
                    android:id="@+id/im_registerxieyi"
                    android:layout_centerInParent="true"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="营业执照"
                    android:textSize="@dimen/sp_13"
                    android:id="@+id/tv_zhizhao"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/im_registerxieyi"
                    android:textColor="@color/title_666"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/next">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:id="@+id/tijiao"
                    android:gravity="center"
                    android:text="提交申请"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_17" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
