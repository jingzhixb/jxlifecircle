<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/f5f5f5"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.activity.ShopInfoActivity">
<include layout="@layout/title_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/rl_xinxiang"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/title_999"
            android:layout_marginLeft="22dp"
            android:text="店鋪形象"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:id="@+id/image"
            android:layout_marginRight="22dp"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_color"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/title_999"
            android:layout_marginLeft="22dp"
            android:text="店铺名称"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:id="@+id/ed_name"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textColor="@color/title_666"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_color"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/title_999"
            android:layout_marginLeft="22dp"
            android:text="所属分类"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/title_666"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_color"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/title_999"
            android:layout_marginLeft="22dp"
            android:text="联系电话"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/ed_phone"
            android:background="@null"
            android:inputType="number"
            android:gravity="center_vertical|end"
            android:textColor="@color/title_666"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_color"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/title_999"
            android:layout_marginLeft="22dp"
            android:text="店铺地址"
            android:id="@+id/x"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_alignTop="@id/x"
            android:background="@mipmap/youjiant"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginRight="22dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="22dp"
            android:layout_below="@id/x"
            android:background="@null"
            android:hint="请输入店铺地址"
            android:textSize="@dimen/sp_14"
            android:id="@+id/tv_address"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:textColor="@color/title_666"
           />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_color"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/rl_renzheng"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/title_999"
            android:layout_marginLeft="22dp"
            android:text="认证资料"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:layout_width="wrap_content"
            android:background="@mipmap/youjiant"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_color"/>
    </RelativeLayout>

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="48dp"
         android:id="@+id/tv_tijiao"
         android:gravity="center"
         android:layout_marginRight="22dp"
         android:layout_marginLeft="22dp"
         android:textColor="@color/white"
         android:textSize="@dimen/sp_15"
         android:text="提交审核"
         android:layout_marginBottom="30dp"
         android:layout_alignParentBottom="true"
         android:background="@drawable/next"/>
 </RelativeLayout>
</LinearLayout>
