<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    android:orientation="vertical"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.activity.AddYouHuiJuanActivity">

    <include layout="@layout/title_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/title_666"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:text="面值金额"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="100dp"
            android:background="@null"
            android:id="@+id/ed_mianzhi"
            android:layout_toLeftOf="@id/x"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/sp_15"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/title_666"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:text="元"
            android:id="@+id/x"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_color"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/rl_bianqian"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/title_666"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:text="商品标签"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/title_666"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:layout_toLeftOf="@id/xx"
            android:id="@+id/tv_biaoqian"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:id="@+id/xx"
            android:layout_centerVertical="true"
            android:background="@mipmap/youjiant"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_color"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/title_666"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:text="数量"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="100dp"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:inputType="number"
            android:id="@+id/ed_shuliang"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/sp_15"
            android:layout_height="match_parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_color"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/title_666"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:text="价格"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="100dp"
            android:background="@null"
            android:layout_toLeftOf="@id/xxx"
            android:id="@+id/ed_jiage"
            android:gravity="center_vertical|end"
            android:textSize="@dimen/sp_15"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/title_666"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:text="元"
            android:id="@+id/xxx"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_color"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:text="保存"
        android:id="@+id/tv_baocun"
        android:layout_marginTop="40dp"
        android:background="@drawable/next"/>
</LinearLayout>
