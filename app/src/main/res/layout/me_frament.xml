<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/f5f5f5"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@mipmap/beijing"
        android:layout_height="200dp">
<zhuyekeji.zhengzhou.jxlifecircle.widget.CircleImageView
    android:layout_width="50dp"
    android:layout_marginTop="40dp"
    android:layout_centerHorizontal="true"
    android:id="@+id/im_user"
    android:background="@mipmap/ic_launcher"
    android:layout_height="50dp" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_below="@id/im_user"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

      <TextView
          android:layout_width="100dp"
          android:layout_marginTop="12dp"
          android:textColor="@color/title_666"
          android:textSize="@dimen/sp_15"
          android:text="签到"
          android:id="@+id/sign"
          android:gravity="center"
          android:background="@drawable/qiandao"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/tv_username"
          android:layout_height="30dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/ll_message"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/jxcolor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/tv_message"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="消息"
                android:textSize="13sp"
                android:textColor="@color/title_666"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/ll_jifen"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/jxcolor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/tv_jifen"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="积分"
                android:textSize="13sp"
                android:textColor="@color/title_666"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_weight="1"
            android:id="@+id/ll_guanzhu"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/jxcolor"
                android:textSize="20sp"
                android:id="@+id/tv_guanzhu"
                android:textStyle="bold"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="关注"
                android:textSize="13sp"
                android:textColor="@color/title_666"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="gone"
            android:id="@+id/ll_fensi"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/jxcolor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/tv_fensi"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="粉丝"
                android:textSize="13sp"
                android:textColor="@color/title_666"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/view_color"/>

<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_me"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"/>
</LinearLayout>
