<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/title_333"
            android:textSize="@dimen/sp_14"
            android:text="分类一"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:id="@+id/jian1"
            android:background="@mipmap/shanchu2"
            android:layout_marginLeft="22dp"
            android:layout_height="20dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/jia1"
            android:layout_toLeftOf="@id/jian1"
            android:background="@mipmap/jia2"
            android:layout_marginLeft="22dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_15"
            android:layout_toLeftOf="@id/jia1"
            android:text="￥20"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_color"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_14"
            android:text="商品名称"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="150dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:background="@null"
            android:textSize="@dimen/sp_14"
            android:textColorHint="@color/title_999"
            android:hint="请输入商品名称"
            android:gravity="center_vertical|end"
            android:layout_marginLeft="22dp"
            android:layout_height="match_parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_color"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_14"
            android:text="数量"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:background="@mipmap/shanchu2"
            android:id="@+id/jian"
            android:layout_marginLeft="12dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/title_666"
            android:text="1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/jian"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/jia2"
            android:id="@+id/jia2"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/jian"
            android:layout_height="20dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_color"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_14"
            android:text="价格"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="150dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:background="@null"
            android:textSize="@dimen/sp_14"
            android:textColorHint="@color/title_999"
            android:hint=""
            android:gravity="center_vertical|end"
            android:layout_marginLeft="22dp"
            android:layout_height="match_parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_color"/>
    </RelativeLayout>
</LinearLayout>
