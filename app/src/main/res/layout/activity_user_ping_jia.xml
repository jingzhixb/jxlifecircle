<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/f5f5f5"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.orderactivity.UserPingJiaActivity">
<include layout="@layout/title_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:id="@+id/ll"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"

            android:layout_marginLeft="22dp"
            android:layout_centerVertical="true"
            android:text="评价"
            android:textColor="@color/title_666"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
          <ImageView
              android:layout_width="18dp"
              android:id="@+id/im1"
              android:background="@mipmap/xingkong"
              android:layout_height="18dp" />
            <ImageView
                android:layout_width="18dp"
                android:background="@mipmap/xingkong"
                android:id="@+id/im2"
                android:layout_marginLeft="10dp"
                android:layout_height="18dp" />
            <ImageView
                android:layout_width="18dp"
                android:background="@mipmap/xingkong"
                android:id="@+id/im3"
                android:layout_marginLeft="10dp"
                android:layout_height="18dp" />
            <ImageView
                android:layout_width="18dp"
                android:background="@mipmap/xingkong"
                android:id="@+id/im4"
                android:layout_marginLeft="10dp"
                android:layout_height="18dp" />
            <ImageView
                android:layout_width="18dp"
                android:background="@mipmap/xingkong"
                android:id="@+id/im5"
                android:layout_marginLeft="10dp"
                android:layout_height="18dp" />
        </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
       <EditText
           android:layout_width="match_parent"
           android:layout_margin="22dp"
           android:textColor="@color/title_666"
           android:textColorHint="@color/title_999"
           android:id="@+id/ed_content"
           android:hint="请输入您对该店铺的评价"
           android:textSize="@dimen/sp_14"
           android:gravity="start"
           android:padding="10dp"
           android:background="@drawable/ed_stoken"
           android:layout_height="70dp" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/title_666"
            android:layout_marginLeft="22dp"
            android:text="上传图片"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_up"
            android:layout_margin="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="45dp"
           android:textColor="@color/white"
           android:gravity="center"
           android:text="确认"
           android:id="@+id/tv_queren"
           android:layout_alignParentBottom="true"
           android:textSize="@dimen/sp_15"
           android:background="@color/jxcolor"/>
   </RelativeLayout>
</LinearLayout>
