<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="22dp"
    android:layout_marginLeft="22dp"

    android:layout_height="130dp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:background="@color/jxcolor"
       android:id="@+id/rl"
       android:layout_height="85dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="84dp"
           android:layout_margin="3dp"
           android:background="@drawable/layer_stoken"
           android:orientation="horizontal">
           <TextView
               android:layout_width="20dp"
               android:textColor="@color/white"
               android:textSize="@dimen/sp_12"
               android:text="￥"
               android:paddingTop="10dp"
               android:gravity="center_horizontal"
               android:layout_gravity="center_horizontal"
               android:layout_height="match_parent" />
           <TextView
               android:layout_width="wrap_content"
               android:id="@+id/tv_provice"
               android:textSize="50sp"
               android:textColor="@color/white"
               android:text="50"
               android:layout_marginLeft="10dp"
               android:gravity="center_vertical"
               android:textStyle="bold"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_width="wrap_content"
               android:textColor="@color/white"
               android:textSize="@dimen/sp_14"
               android:text="代金卷"
               android:layout_marginLeft="4dp"
               android:layout_height="wrap_content" />

           <View
               android:layout_width="1dp"
               android:layout_height="50dp"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="10dp"
               android:background="@color/white"/>

           <LinearLayout
               android:layout_width="142dp"
               android:gravity="center_vertical"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="20dp"
               android:orientation="vertical"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="match_parent"
                   android:id="@+id/tv_shuoming"
                   android:background="@color/white"
                   android:textSize="@dimen/sp_15"
                   android:textStyle="bold"
                   android:gravity="center"
                   android:text="订单满49元可使用"
                   android:textColor="@color/jxcolor"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_marginTop="15dp"
                   android:textSize="10sp"
                   android:text="有效期2018-1-9至2018-2-14"
                   android:gravity="center"
                   android:textColor="@color/white"
                   android:layout_height="wrap_content" />
           </LinearLayout>
       </LinearLayout>
   </RelativeLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:layout_below="@id/rl"
       android:background="@color/white">
       <TextView
           android:layout_width="wrap_content"
           android:textSize="@dimen/sp_12"
           android:textColor="@color/title_666"
           android:layout_centerVertical="true"
           android:text="已售：20"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_width="40dp"
           android:layout_centerVertical="true"
           android:gravity="center"
           android:textColor="@color/jxcolor"
           android:text="删除"
           android:id="@+id/tv_shanchu"
           android:textSize="@dimen/sp_12"
           android:background="@drawable/green_stoken"
           android:layout_alignParentRight="true"
           android:layout_height="20dp" />
       <TextView
           android:layout_width="40dp"
           android:layout_centerVertical="true"
           android:gravity="center"
           android:textColor="@color/jxcolor"
           android:text="下架"
           android:layout_marginRight="10dp"
           android:id="@+id/xiajia"
           android:layout_toLeftOf="@id/tv_shanchu"
           android:textSize="@dimen/sp_12"
           android:background="@drawable/green_stoken"
           android:layout_height="20dp" />

       <TextView
           android:layout_width="40dp"
           android:layout_centerVertical="true"
           android:gravity="center"
           android:textColor="@color/white"
           android:text="编辑"
           android:id="@+id/tv_bianji"
           android:layout_marginRight="10dp"
           android:textSize="@dimen/sp_12"
           android:background="@color/jxcolor"
           android:layout_toLeftOf="@id/xiajia"
           android:layout_height="20dp" />
   </RelativeLayout>
</RelativeLayout>
