<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.activity.ShopCooperation">


    <include layout="@layout/title_layout"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="22dp"
        android:id="@+id/rl_meishi"
        android:layout_marginRight="22dp"
        android:background="@drawable/order_bg">

        <ImageView
            android:layout_width="25dp"
            android:background="@drawable/shop_meishi"
            android:scaleType="fitXY"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/orange"
            android:layout_marginLeft="50dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/xxxx"
            android:text="美食商家入驻"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/meishi"
            android:layout_height="35dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="15dp"
        android:id="@+id/rl_jiudian"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/order_bg">

        <ImageView
            android:layout_width="25dp"
            android:background="@drawable/order_lan"
            android:scaleType="fitXY"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/dodgerblue"
            android:layout_marginLeft="50dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/x"
            android:text="酒店商家入驻"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/jiudian"
            android:layout_height="35dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:id="@+id/rl_dujia"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/order_bg">

        <ImageView
            android:layout_width="25dp"
            android:background="@drawable/order_lv"
            android:scaleType="fitXY"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/jxcolor"
            android:layout_marginLeft="50dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/xx"
            android:text="境内度假商家入驻"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/lvyou"
            android:layout_height="35dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="22dp"
        android:id="@+id/rl_zonghe"
        android:layout_marginRight="22dp"
        android:background="@drawable/order_bg">

        <ImageView
            android:layout_width="25dp"
            android:background="@drawable/order_huang"
            android:scaleType="fitXY"
            android:layout_height="match_parent" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:orientation="vertical"
          android:layout_centerVertical="true"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="wrap_content"
              android:textColor="@color/orange"
              android:layout_marginLeft="50dp"
              android:textSize="18sp"
              android:textStyle="bold"
              android:id="@+id/xxx"
              android:text="综合商家入驻"
              android:layout_height="wrap_content" />
          <TextView
              android:layout_width="wrap_content"
              android:textSize="@dimen/sp_15"
              android:textColor="@color/title_666"
              android:layout_marginLeft="50dp"
              android:text="休闲娱乐,丽人,亲子,教育等"
              android:layout_marginTop="10dp"
              android:layout_height="wrap_content" />
      </LinearLayout>
        <ImageView
            android:layout_width="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/zonghe"
            android:layout_height="35dp" />
    </RelativeLayout>
</LinearLayout>
