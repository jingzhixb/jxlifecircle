<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/f5f5f5"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.homeacyivity.PinCheActivity">
<include layout="@layout/title_layout"/>
    <zhuyekeji.zhengzhou.jxlifecircle.widget.VerticalScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">
                <EditText
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_toLeftOf="@id/x"
                    android:id="@+id/ed_start"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/title_333"
                    android:gravity="left|center_vertical"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="22dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="16dp"
                    android:background="@mipmap/zhuanhuan"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/x"
                    android:layout_height="14dp" />
                <EditText
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/ed_end"
                    android:textColor="@color/title_666"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginRight="22dp"
                    android:layout_toRightOf="@id/x"
                    android:layout_height="match_parent" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view_color"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/rl_data"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/title_333"
                    android:textSize="@dimen/sp_15"
                    android:id="@+id/tv_data"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:background="@mipmap/youjiant"
                    android:layout_alignParentRight="true"
                    android:layout_height="18dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view_color"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="@dimen/sp_15"
                    android:id="@+id/tv_search"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginRight="22dp"
                    android:text="开始搜索"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/search_bg3"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="20dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/rl_hot_route"
                android:layout_marginTop="10dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/title_999"
                    android:textSize="@dimen/sp_14"
                    android:text="热门路线"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:background="@mipmap/youjiant"
                    android:layout_alignParentRight="true"
                    android:layout_height="18dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/view_color"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/rv_hot_search"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:layout_height="wrap_content"/>

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/slidingtl"
                android:layout_marginTop="10dp"
                app:tl_textSelectColor="@color/jxcolor"
                app:tl_textsize="@dimen/sp_15"
                app:tl_tab_space_equal="true"
                android:fitsSystemWindows="true"
                android:background="@color/white"
                app:tl_indicator_width="40dp"
                app:tl_textUnselectColor="@color/title_666"
                android:layout_width="match_parent"
                app:tl_indicator_color="@color/jxcolor"
                app:tl_underline_color="@color/jxcolor"
                android:layout_height="48dp"
                />
            <zhuyekeji.zhengzhou.jxlifecircle.widget.MyViewPage
                android:id="@+id/viewpage"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@android:color/white"/>
        </LinearLayout>
    </zhuyekeji.zhengzhou.jxlifecircle.widget.VerticalScrollView>

</LinearLayout>
