<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/f5f5f5"
    android:layout_height="match_parent"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.activity.ShopOrederActivity">


    <include layout="@layout/title_layout"/>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/slidingtl"
        app:tl_textSelectColor="@color/jxcolor"
        app:tl_textsize="@dimen/sp_15"
        app:tl_tab_space_equal="true"
        android:background="@color/white"
        app:tl_indicator_width="40dp"
        app:tl_textUnselectColor="@color/title_666"
        android:layout_width="match_parent"
        app:tl_indicator_color="@color/jxcolor"
        app:tl_underline_color="@color/jxcolor"
        android:layout_height="48dp"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@android:color/white"/>
</LinearLayout>
