<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    android:orientation="vertical"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.activity.AddBankActivity">

    <include layout="@layout/title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="@color/view_color" />

        <TextView
            android:id="@+id/x1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="银行"
            android:textColor="@color/title_999"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="22dp"
            android:layout_toRightOf="@id/x1"
            android:background="@null"
            android:id="@+id/ed_bank_name"
            android:paddingLeft="15dp"
            android:text="银行名字"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="@color/view_color" />

        <TextView
            android:id="@+id/x2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="卡号"
            android:textColor="@color/title_999"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="22dp"
            android:layout_toRightOf="@id/x2"
            android:background="@null"
            android:hint="请输入银行卡号"
            android:id="@+id/ed_bank_number"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="@color/view_color" />

        <TextView
            android:id="@+id/x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="姓名"
            android:textColor="@color/title_999"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="22dp"
            android:layout_toRightOf="@id/x3"
            android:background="@null"
            android:hint="请输入姓名"
            android:id="@+id/ed_name"
            android:paddingLeft="15dp"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="@color/view_color" />

        <TextView
            android:id="@+id/x4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="身份证号"
            android:textColor="@color/title_999"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="22dp"
            android:layout_toRightOf="@id/x4"
            android:background="@null"
            android:id="@+id/ed_cdnumber"
            android:digits="123456789xX"
            android:hint="请输入身份证号码"
            android:paddingLeft="15dp"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="@color/view_color" />

        <TextView
            android:id="@+id/x5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="手机号 "
            android:textColor="@color/title_999"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="22dp"
            android:layout_toRightOf="@id/x5"
            android:background="@null"
            android:hint="请输入手机号"
            android:id="@+id/ed_phone"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="@color/view_color" />

        <TextView
            android:id="@+id/x6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="验证码"
            android:textColor="@color/title_999"
            android:textSize="@dimen/sp_14" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="22dp"
            android:layout_toRightOf="@id/x6"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:id="@+id/ed_yanzheng"
            android:paddingLeft="15dp"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_14" />
        <TextView
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/ed_yanzheng"
            android:background="@color/jxcolor"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_yanzheng"
            android:textSize="@dimen/sp_15"
            android:text="获取验证码"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:text="立即绑定"
        android:id="@+id/tv_bangding"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/next"/>
</LinearLayout>
