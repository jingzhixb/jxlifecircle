<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <zhuyekeji.zhengzhou.jxlifecircle.widget.CircleImageView
            android:layout_width="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/ic_launcher"
            android:id="@+id/im_title"
            android:layout_height="45dp" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/title_333"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp"
            android:text="中国 浦发银行"
            android:id="@+id/name"
            android:layout_toRightOf="@id/im_title"
            android:layout_alignTop="@id/im_title"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/title_666"
            android:layout_marginTop="4dp"
            android:text="尾号9999"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/name"
            android:layout_toRightOf="@id/im_title"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="22dp"
        android:id="@+id/rl_moren"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@mipmap/gouxuan_on"
            android:id="@+id/img"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_12"
            android:layout_toRightOf="@id/img"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:text="设置默认地址"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
