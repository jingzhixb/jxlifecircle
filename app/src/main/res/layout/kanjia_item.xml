<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <ImageView
        android:layout_width="100dp"
        android:layout_marginLeft="22dp"
        android:layout_centerVertical="true"
        android:id="@+id/im_title"
        android:layout_height="80dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/im_title"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="22dp"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="几番沙发上看就是解放军分身乏术的方式的方式"
            android:textColor="@color/title_666"
            android:maxLines="2"
            android:id="@+id/title"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/title_999"
                android:textSize="@dimen/sp_12"
                android:text="原价:"
                android:layout_centerVertical="true"
                android:id="@+id/x"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_12"
                android:text="1000"
                android:layout_centerVertical="true"
                android:id="@+id/price"
                android:layout_toRightOf="@id/x"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/price"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_12"
                android:id="@+id/desc"
                android:textColor="@color/title_999"
                android:text="6.6万人已拿奖"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:id="@+id/tv_kanjia"
                android:text="砍价0元得"
                android:gravity="center"
                android:background="@drawable/kanjia"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/view_color"/>
</RelativeLayout>
