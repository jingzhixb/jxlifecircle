<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/f5f5f5"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.homeacyivity.KanJiaShareActivity">
<include layout="@layout/title_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@mipmap/huodong1"
        android:layout_height="225dp">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="20dp"
    android:background="@mipmap/huodong2"
    android:layout_alignParentBottom="true"
    android:layout_height="130dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="15dp"
    android:textColor="@color/maroon"
    android:textSize="17sp"
    android:textStyle="bold"
    android:text="活动规则"
    android:layout_height="wrap_content" />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_guize"
      android:layout_marginLeft="55dp"
      android:layout_marginRight="40dp"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

</LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/maroon"
        android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="12dp"
           android:id="@+id/lx"
           android:layout_centerHorizontal="true"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:textSize="@dimen/sp_15"
               android:textColor="@color/white"
               android:text="已砍"
               android:layout_height="wrap_content" />

           <TextView
               android:layout_width="wrap_content"
               android:textSize="21sp"
               android:textColor="@color/orange"
               android:text="16.8"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_width="wrap_content"
               android:textSize="@dimen/sp_15"
               android:textColor="@color/white"
               android:text="元，"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_width="wrap_content"
               android:textSize="@dimen/sp_15"
               android:textColor="@color/white"
               android:text="还差"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_width="wrap_content"
               android:textSize="21sp"
               android:textColor="@color/orange"
               android:text="16.8"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_width="wrap_content"
               android:textSize="@dimen/sp_15"
               android:textColor="@color/white"
               android:text="元，"
               android:layout_height="wrap_content" />
       </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/rb_text_check"
            android:text="分享给好友，多砍一刀"
            android:gravity="center"
            android:id="@+id/tv_kanjia"
            android:layout_marginTop="15dp"
            android:background="@drawable/kanjia_bg"
            android:layout_below="@id/lx"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:text="还剩25435441354434"
            android:id="@+id/tv_next_time"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_kanjia"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />
        <zhuyekeji.zhengzhou.jxlifecircle.widget.CircleImageView
            android:layout_width="45dp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/rl_x"
            android:layout_marginTop="-22dp"
            android:layout_height="45dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/tv_next_time"
            android:id="@+id/rl_x"
            android:background="@color/f5f5f5"
            android:layout_marginTop="30dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/title_666"
                android:textSize="@dimen/sp_14"
                android:text="用户名"
                android:id="@+id/tv_username"
                android:layout_marginTop="33dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_below="@id/tv_username"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_height="70dp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="70dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/title_666"
                        android:text="都没时间更是将免费试驾感受士大夫似的"
                        android:maxLines="2"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_16"
                        android:text="395"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
