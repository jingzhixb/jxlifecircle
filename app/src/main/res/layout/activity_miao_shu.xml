<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/f5f5f5"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.activity.MiaoShuActivity">
<include layout="@layout/title_layout"/>
    <EditText
    android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingLeft="22dp"
    android:hint="请输入商品描述"
        android:maxLength="300"
    android:gravity="start"
        android:id="@+id/ed_miaoshu"
    android:textColorHint="@color/title_999"
    android:textColor="@color/title_666"
    android:textSize="@dimen/sp_14"
    android:paddingRight="22dp"
    android:paddingTop="10dp"
    android:layout_height="200dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:gravity="center"
        android:id="@+id/tv_baocun"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:text="保存"
        android:layout_marginTop="30dp"
        android:background="@drawable/next"/>
</LinearLayout>
