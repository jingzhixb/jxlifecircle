<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.activity.BingPhoneActivity">
    <include layout="@layout/title_layout"/>
    <TextView
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_12"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/title_666"
        android:text="请输入您的新手机号，点击“获取验证码”完成短信验证"
        android:layout_height="50dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:id="@+id/ed_mobile"
        android:inputType="number"
        android:hint="请输入新的手机号"
        android:textSize="@dimen/sp_15"
        android:textColorHint="@color/title_999"
        android:paddingLeft="22dp"
        android:background="@color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ed_yanzheng"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入6位数验证码"
            android:paddingLeft="22dp"
            android:textColor="@color/title_666"
            android:textSize="@dimen/sp_15" />

        <Button
            android:id="@+id/bt_yanzheng"
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/jxcolor"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/next">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginRight="22dp"
            android:gravity="center"
            android:id="@+id/queding"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>
</LinearLayout>
