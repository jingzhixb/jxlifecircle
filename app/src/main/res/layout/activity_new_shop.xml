<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    android:orientation="vertical"
    tools:context="zhuyekeji.zhengzhou.jxlifecircle.activity.NewShopActivity">

    <include layout="@layout/title_layout"/>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:background="@color/white"
           android:layout_height="match_parent">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="75dp">
              <TextView
                  android:layout_width="wrap_content"
                  android:textSize="@dimen/sp_14"
                  android:textColor="@color/title_666"
                  android:layout_marginLeft="22dp"
                  android:layout_marginTop="10dp"
                  android:layout_height="wrap_content" />
               <ImageView
                   android:layout_width="75dp"
                   android:layout_height="60dp"
                   android:layout_marginRight="22dp"
                   android:id="@+id/im_img"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_alignParentBottom="true"
                   android:background="@color/view_color"/>
           </RelativeLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:background="@color/white">
               <TextView
                   android:layout_width="wrap_content"
                   android:textColor="@color/title_666"
                   android:textSize="@dimen/sp_14"
                   android:layout_marginLeft="22dp"
                   android:layout_centerVertical="true"
                   android:text="商品名称"
                   android:id="@+id/x"
                   android:layout_height="wrap_content" />
               <EditText
                   android:layout_width="match_parent"
                   android:layout_alignParentRight="true"
                   android:layout_toRightOf="@id/x"
                   android:hint="40字以内"
                   android:id="@+id/tv_shopname"
                   android:textColor="@color/title_666"
                   android:gravity="end|center_vertical"
                   android:layout_marginRight="22dp"
                   android:textSize="@dimen/sp_14"
                   android:layout_marginLeft="22dp"
                   android:background="@null"
                   android:layout_height="match_parent" />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_alignParentBottom="true"
                   android:background="@color/view_color"/>
           </RelativeLayout>


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:id="@+id/rl_miaoshu"
               android:background="@color/white">
               <TextView
                   android:layout_width="wrap_content"
                   android:textColor="@color/title_666"
                   android:textSize="@dimen/sp_14"
                   android:layout_marginLeft="22dp"
                   android:layout_centerVertical="true"
                   android:text="商品描述"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_alignParentRight="true"
                   android:hint="选填 100字以内"
                   android:textColor="@color/title_666"
                   android:singleLine="true"
                   android:id="@+id/ed_miaoshu"
                   android:gravity="end|center_vertical"
                   android:layout_marginRight="35dp"
                   android:textSize="@dimen/sp_14"
                   android:layout_height="match_parent" />
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="22dp"
                   android:layout_centerVertical="true"
                   android:background="@mipmap/youjiant"
                   android:layout_height="wrap_content" />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_alignParentBottom="true"
                   android:background="@color/view_color"/>
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:id="@+id/rl_biaoqian"
               android:background="@color/white">
               <TextView
                   android:layout_width="wrap_content"
                   android:textColor="@color/title_666"
                   android:textSize="@dimen/sp_14"
                   android:layout_marginLeft="22dp"
                   android:layout_centerVertical="true"
                   android:text="商品标签"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_alignParentRight="true"
                   android:gravity="end|center_vertical"
                   android:id="@+id/tv_iaoqian"
                   android:layout_marginRight="35dp"
                   android:textColor="@color/title_666"
                   android:textSize="@dimen/sp_14"
                   android:layout_height="match_parent" />
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="22dp"
                   android:layout_centerVertical="true"
                   android:background="@mipmap/youjiant"
                   android:layout_height="wrap_content" />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_alignParentBottom="true"
                   android:background="@color/view_color"/>
           </RelativeLayout>



           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:id="@+id/fenlei"
               android:background="@color/white">
               <TextView
                   android:layout_width="wrap_content"
                   android:textColor="@color/title_666"
                   android:textSize="@dimen/sp_14"
                   android:id="@+id/tv_type"
                   android:layout_marginLeft="22dp"
                   android:layout_centerVertical="true"
                   android:text="店内分类"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_alignParentRight="true"
                   android:gravity="end|center_vertical"
                   android:layout_marginRight="35dp"
                   android:textColor="@color/title_666"
                   android:textSize="@dimen/sp_15"
                   android:id="@+id/tv_fenlei"
                   android:layout_height="match_parent" />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_alignParentBottom="true"
                   android:background="@color/view_color"/>
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:background="@color/white">
               <TextView
                   android:layout_width="wrap_content"
                   android:textColor="@color/title_666"
                   android:textSize="@dimen/sp_14"
                   android:id="@+id/money"
                   android:layout_marginLeft="22dp"
                   android:layout_centerVertical="true"
                   android:text="价格"
                   android:layout_height="wrap_content" />
               <EditText
                   android:layout_width="100dp"
                   android:layout_alignParentRight="true"
                   android:gravity="end|center_vertical"
                   android:layout_marginRight="35dp"
                   android:textColor="@color/title_666"
                   android:textSize="@dimen/sp_15"
                   android:background="@null"
                   android:inputType="number"
                   android:id="@+id/ed_price"
                   android:layout_height="match_parent" />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_alignParentBottom="true"
                   android:background="@color/view_color"/>
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:background="@color/white">
               <TextView
                   android:layout_width="wrap_content"
                   android:textColor="@color/title_666"
                   android:textSize="@dimen/sp_14"
                   android:layout_marginLeft="22dp"
                   android:layout_centerVertical="true"
                   android:text="市场价"
                   android:layout_height="wrap_content" />
               <EditText
                   android:layout_width="100dp"
                   android:layout_alignParentRight="true"
                   android:gravity="end|center_vertical"
                   android:layout_marginRight="35dp"
                   android:id="@+id/ed_shopprice"
                   android:background="@null"
                   android:inputType="number"
                   android:textColor="@color/title_666"
                   android:textSize="@dimen/sp_15"
                   android:layout_height="match_parent" />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_alignParentBottom="true"
                   android:background="@color/view_color"/>
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:background="@color/white">
               <TextView
                   android:layout_width="wrap_content"
                   android:textColor="@color/title_666"
                   android:textSize="@dimen/sp_14"
                   android:layout_marginLeft="22dp"
                   android:layout_centerVertical="true"
                   android:text="有效期"
                   android:id="@+id/xx"
                   android:layout_height="wrap_content" />
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:orientation="horizontal"
                       android:layout_toRightOf="@id/xx"
                       android:layout_marginLeft="20dp"
                       android:layout_height="match_parent">

                      <RelativeLayout
                          android:layout_width="0dp"
                          android:layout_height="30dp"
                          android:layout_marginRight="6dp"
                          android:layout_gravity="center_vertical"
                          android:background="@drawable/spinner_stoken"
                          android:layout_weight="1">
                          <Spinner
                              android:layout_width="match_parent"
                              android:layout_marginRight="6dp"
                              android:id="@+id/sp_start_youxiao"
                              android:layout_height="match_parent"/>
                      </RelativeLayout>

                       <RelativeLayout
                           android:layout_width="0dp"
                           android:layout_height="30dp"
                           android:layout_marginRight="22dp"
                           android:layout_marginLeft="6dp"
                           android:layout_gravity="center_vertical"
                           android:background="@drawable/spinner_stoken"
                           android:layout_weight="1">
                           <Spinner
                               android:layout_width="match_parent"
                               android:layout_marginRight="6dp"
                               android:id="@+id/sp_end_youxiao"
                               android:layout_height="match_parent"/>
                       </RelativeLayout>

                   </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_alignParentBottom="true"
                   android:background="@color/view_color"/>
           </RelativeLayout>


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:background="@color/white">
               <TextView
                   android:layout_width="wrap_content"
                   android:textColor="@color/title_666"
                   android:textSize="@dimen/sp_14"
                   android:layout_marginLeft="22dp"
                   android:layout_centerVertical="true"
                   android:text="周末,节假日通用"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="22dp"
                   android:background="@mipmap/off"
                   android:layout_marginTop="5dp"
                   android:id="@+id/im_tongyong"
                   android:layout_centerVertical="true"
                   android:layout_height="wrap_content" />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_alignParentBottom="true"
                   android:background="@color/view_color"/>
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:background="@color/white">
               <TextView
                   android:layout_width="wrap_content"
                   android:textColor="@color/title_666"
                   android:textSize="@dimen/sp_14"
                   android:layout_marginLeft="22dp"
                   android:layout_centerVertical="true"
                   android:text="使用时间"
                   android:id="@+id/xxx"
                   android:layout_height="wrap_content" />
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:orientation="horizontal"
                   android:layout_toRightOf="@id/xxx"
                   android:layout_toLeftOf="@id/jia2"
                   android:layout_marginRight="10dp"
                   android:layout_marginLeft="20dp"
                   android:layout_height="match_parent">

                   <RelativeLayout
                       android:layout_width="0dp"
                       android:layout_height="30dp"
                       android:layout_marginRight="6dp"
                       android:layout_gravity="center_vertical"
                       android:background="@drawable/spinner_stoken"
                       android:layout_weight="1">
                       <Spinner
                           android:layout_width="match_parent"
                           android:layout_marginRight="6dp"
                           android:id="@+id/sp_start_time"
                           android:layout_height="match_parent"/>
                   </RelativeLayout>

                   <RelativeLayout
                       android:layout_width="0dp"
                       android:layout_height="30dp"
                       android:layout_marginLeft="6dp"
                       android:layout_gravity="center_vertical"
                       android:background="@drawable/spinner_stoken"
                       android:layout_weight="1">
                       <Spinner
                           android:layout_width="match_parent"
                           android:layout_marginRight="6dp"
                           android:id="@+id/sp_end_time"
                           android:layout_height="match_parent"/>
                   </RelativeLayout>
               </LinearLayout>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="22dp"
                   android:id="@+id/jia2"
                   android:background="@mipmap/jia2"
                   android:layout_height="wrap_content" />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_alignParentBottom="true"
                   android:background="@color/view_color"/>
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:id="@+id/rl_guize"
               android:background="@color/white">
               <TextView
                   android:layout_width="wrap_content"
                   android:textColor="@color/title_666"
                   android:textSize="@dimen/sp_14"
                   android:layout_marginLeft="22dp"
                   android:layout_centerVertical="true"
                   android:text="使用规则"
                   android:layout_height="wrap_content" />
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="22dp"
                   android:background="@mipmap/youjiant"
                   android:layout_centerVertical="true"
                   android:layout_height="wrap_content" />
               <View
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:layout_alignParentBottom="true"
                   android:background="@color/view_color"/>
           </RelativeLayout>


           <TextView
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:layout_marginRight="22dp"
               android:layout_marginLeft="22dp"
               android:gravity="center"
               android:textColor="@color/white"
               android:textSize="@dimen/sp_15"
               android:text="保存"
               android:layout_marginTop="30dp"
               android:layout_marginBottom="40dp"
               android:id="@+id/tv_baocun"
               android:background="@drawable/next"/>
       </LinearLayout>
   </ScrollView>
</LinearLayout>
